<%=form_with(model: @author, local: true) do |form|%>
<% if @author.errors.any?%>
        <div id="error_explanation">
            <h2>
                <%= pluralize(@author.errors.count, "error")%>
                prohibited this author from being saved:
            </h2>
            <ul>
                <% @author.errors.full.messages.each do |msg| %>
                <li><%= msg %></li>
                <%end%>
            </ul>
        </div>
    <% end %>

    <p>
    <%=form.label :author_name%><br>
    <%=form.text_field :author_name%><br>

    <%=form.label :details%><br>
    <%=form.text_area :details%>

    
    </p>


    <p>
    <%=form.submit%>
    </p>
<%end%>