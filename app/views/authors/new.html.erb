<h1> Add a new author </h1>

<%= render "shared/homepagelink"%>

<%= form_with scope: :author, url: authors_path, local: true do |form|  %>
    <p>
        <%= form.label :author_name%><br>
        <%= form.text_field :author_name %><br>

        <%= form.label :details%><br>
        <%= form.text_area :details %><br>
    <p>

    

    <p>
        <%= form.submit %>
    </p>

<% end %>

