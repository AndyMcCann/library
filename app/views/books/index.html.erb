<h1> Behold Our Books </h1>

<%= render "shared/homepagelink"%>
<%= link_to '<button type="button">New Book</button>'.html_safe, new_book_path %>

<h3> Current Books </h3>

<table>
    <tr>
        <th> Title </th>
        <th> Author </th>
        <th> Genre </th>
    <tr>

    <% @books.each do |book| %>
        <tr>
            <td><%= book.book_title%></td>
            <td><%= book.author.author_name%></td>
            <td><%= book.genre.genre_name%> </td>
            <td><%= link_to 'Show', book_path(book) %></td>
            <td><%= link_to 'Edit', edit_book_path(book) %></td>
            <td><%= link_to 'Destroy', book_path(book),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
              
        </tr>
    <% end %>
</table>